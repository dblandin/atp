generateGrid($size, $min-colums, $max-colums, $gutter) {
	
	for $i in $min-colums..$max-colums {
		
		.col-{$size}-{$i} {
			flex-basis: $i * (100% / $max-colums);
			width: $i * (100% / $max-colums);
			//padding: 0 ($gutter / 2);
		}
		
		.col-{$size}-offset-{$i} {
			margin-left: $i * (100% / $max-colums);
		}
	}
	
	.col-{$size}-auto {
		flex: 1 1 auto;
  		max-width: inherit;
	}
	
}
		






